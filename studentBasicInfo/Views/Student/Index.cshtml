@model IEnumerable<studentBasicInfo.Models.Student>
@{
    ViewBag.Title = "Index";
}

<h2>Student List</h2>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Grade</th>
            <th>Action</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Grade</td>
                <td>
                    <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Student", new { id = student.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
