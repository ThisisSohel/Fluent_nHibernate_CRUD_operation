@model studentBasicInfo.Models.Student

@{
    ViewBag.Title = "Create";
}

<h2>Add a new student information</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt-3">
        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
       @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mt-3">
        @Html.LabelFor(m => m.Age, new { @class = "form-label" })
        @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mt-3">
        @Html.LabelFor(m => m.Grade, new { @class = "form-label" })
        @Html.EditorFor(m => m.Grade, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
